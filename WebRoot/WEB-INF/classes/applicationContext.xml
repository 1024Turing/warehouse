	    			<value>com/zhuang/warehouse/domain/GoodsItem.hbm.xml</value>	    		
	    			<value>com/zhuang/warehouse/domain/InputOrder.hbm.xml</value>	    		
	    			<value>com/zhuang/warehouse/domain/Records.hbm.xml</value>	    		
	    			<value>com/zhuang/warehouse/domain/ApplyOrder.hbm.xml</value>	    		
